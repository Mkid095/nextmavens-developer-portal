# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/nextmavens

# JWT Authentication
# Generate a secure random string for production (use: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-key-here-change-in-production
REFRESH_SECRET=your-refresh-secret-key-here-change-in-production

# Secrets Encryption
# Master key for encrypting sensitive data (use: openssl rand -hex 32)
SECRETS_MASTER_KEY=your-secrets-master-key-here-change-in-production

# Application
PORT=3000
NODE_ENV=development

# Resend Email Service Configuration
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxx

# Default sender email address
# This email must be verified in your Resend account
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Support Configuration
SUPPORT_EMAIL=support@yourdomain.com
SUPPORT_URL=https://yourdomain.com/support/suspensions

# API Gateway Configuration
NEXT_PUBLIC_AUDIT_API_URL=http://localhost:8080/api/audit

# Auth Service Configuration
# Base URL for the auth service API
AUTH_SERVICE_URL=http://localhost:3001
# API key for authenticating with the auth service (developer portal token)
AUTH_SERVICE_API_KEY=your_auth_service_api_key_here

# Control Plane API Configuration
# Base URL for the Control Plane API
CONTROL_PLANE_URL=http://localhost:3000

# Telegram Storage API Configuration
# Base URL for the Telegram Storage API
TELEGRAM_STORAGE_API_URL=https://telegram-api.nextmavens.cloud
# API key for authenticating with the Telegram Storage service
TELEGRAM_STORAGE_API_KEY=your_telegram_storage_api_key_here

# Cloudinary Configuration
# Cloudinary cloud name for image/media optimization
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
# Cloudinary API key (optional, for signed uploads)
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
# Cloudinary API secret (optional, for signed uploads)
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here
# Cloudinary upload preset (for unsigned uploads)
CLOUDINARY_UPLOAD_PRESET=your_unsigned_upload_preset_here
